<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/empresa"
        android:layout_width="209dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-14dp"
        app:srcCompat="@drawable/manzana_v" />

    <TextView
        android:id="@+id/inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:text="Iniciar Sesión"
        android:textAlignment="textEnd"
        android:textColor="@color/green_500"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/red"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="115dp"
        android:text="Con tu red social"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/log_facebook"
        android:layout_width="180dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="145dp"
        android:backgroundTint="@color/blue_900"
        app:srcCompat="@drawable/facebook" />

    <ImageButton
        android:id="@+id/log_google"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="213dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/grey_100"
        app:srcCompat="@drawable/google" />

    <Button
        android:id="@+id/apple"
        android:layout_width="378dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/black"
        android:drawableLeft="@mipmap/ic_apple_foreground"
        android:text="Continuar con Apple"
        android:textAlignment="center"
        app:iconPadding="0dp" />

    <Button
        android:id="@+id/celular"
        android:layout_width="378dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/green_900"
        android:text="Continúa con tu Celular" />

    <TextView
        android:id="@+id/correo"
        style=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="305dp"
        android:text="Con tu correo"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/ingresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="340dp"
        android:text="Ingrese su correo electrónico"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/arroba"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="369dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="319dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ejemplo@correo.com"
        android:textColor="@color/grey_500" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="420dp"
        android:text="Contraseña"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/digitos"
        android:layout_width="378dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="250dp"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_eyes"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Debe tener mínimo 8 dígitos"
        android:textColor="@color/grey_500" />

    <Button
        android:id="@+id/sesion"
        android:layout_width="378dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/green_500"
        android:text="INICIAR SESIÓN" />


    <TextView
        android:id="@+id/iniciar"
        style=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="552dp"
        android:text="¿No puedes iniciar sesión?"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/olvide"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="@color/green_500"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Olvidé mi Contraseña"
        android:textAlignment="center"
        android:textColor="@color/green_500"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cuenta"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="590dp"
        android:layout_marginEnd="25dp"
        android:text="¿Aun no tienes una cuenta?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/registro"
        android:layout_width="378dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/green_500"
        android:text="Regístrate" />




</RelativeLayout>